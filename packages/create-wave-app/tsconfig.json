{
	"extends": "tsconfig/base.json",
	"compilerOptions": {
		"module": "ESNext",
		"target": "ESNext",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"lib": ["ES2020"],
		"resolveJsonModule": true,
		"sourceMap": true,
		"outDir": "./dist",
		"jsx": "preserve",
		"types": ["vitest/globals"],
		"strict": true,
		"noFallthroughCasesInSwitch": true
	},
	"ts-node": { "esm": true},
	"include": ["src", "__tests__"],
	"exclude": ["dist", "build", "node_modules", "coverage", "*.md", "*.yaml", "src/templates/*"],
}
