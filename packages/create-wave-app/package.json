  "author": "Vastly",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "create-wave-app": "dist/index.js",
    "cwa": "dist/index.js"
  },
  "files": [
    "dist"
  ],
