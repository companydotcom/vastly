  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.7",
    "@types/semver": "^7.5.8",
    "@vastly/eslint-config-custom": "workspace:*",
    "@vitest/coverage-c8": "^0.31.4",
    "@vitest/ui": "^1.6.0",
    "eslint": "^9.5.0",
    "jsdom": "^24.1.0",
