    "react-number-format": "^5.1.3",
    "react-phone-number-input": "^3.2.18",
    "react-select": "^5.7.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "url": "git+https://github.com/companydotcom/wave"
  }
