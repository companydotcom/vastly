    "@types/react-datepicker": "^4.8.0",
    "@types/react-dom": "^18.0.6",
    "@types/testing-library__jest-dom": "^5.14.5",
    "@vastly/eslint-config-custom": "workspace:*",
    "@vastly/test-utils": "workspace:*",
    "eslint": "^7.32.0",
    "eslint-plugin-storybook": "^0.6.11",
    "jsdom": "^21.1.0",
    "prop-types": "^15.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "storybook": "^7.0.21",
    "ts-node": "^10.9.1",
    "tsconfig": "workspace:*",
    "typescript": "^4.9.5",
    "vitest": "0.31.0"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "dependencies": {
    "@vastly/ui": "workspace:*",
    "@vastly/utils": "workspace:*",
