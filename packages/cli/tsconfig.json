{
	"compilerOptions": {
    "jsx": "preserve",
		"strict": true,
		"noFallthroughCasesInSwitch": true,
		"noEmitOnError": true,
		"moduleResolution": "node",
		"module": "ESNext",
		"target": "ESNext",
		"esModuleInterop": true,
		"allowJs": true,
		"lib": ["ES2020"],
		"resolveJsonModule": true,
		"sourceMap": true,
		"outDir": "./dist",
		"types": ["vitest/globals"],
	},
	"exclude": ["dist", "node_modules", "coverage", "templates"],
	"include": ["__tests__", "src"],
}