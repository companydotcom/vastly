{
	"compilerOptions": {
		"strict": true,
		"noEmitOnError": true,
		"noFallthroughCasesInSwitch": true,
		"moduleResolution": "node16",
		"module": "ESNext",
		"target": "ES2020",
		"esModuleInterop": true,
		"allowJs": true,
		"lib": ["ES2020"],
		"resolveJsonModule": true,
		"sourceMap": true,
		"outDir": "./dist",
	},
	"exclude": ["node_modules"],
	"include": ["src/**/*"],
}