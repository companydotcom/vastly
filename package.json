{
  "name": "dxp",
  "version": "0.0.1",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "build:packages": "turbo run build --filter=@dxp/*",
    "clean": "turbo run clean && rm -rf node_modules",
    "dev": "turbo run dev --no-cache --continue",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md,mdx}\"",
    "dev:docs": "turbo run dev --filter=docs --no-cache",
    "prepare": "husky install",
    "switch:dev": "tsx scripts/switch-env.ts dev",
    "publish-packages": "turbo run build lint test && changeset version && changeset publish",
    "preinstall": "npx only-allow pnpm",
    "dev:components": "turbo run dev --filter=@dxp/ui --filter=@dxp/forms --no-cache --continue"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.0",
    "@commitlint/cli": "^17.4.2",
    "@types/node": "18.11.10",
    "eslint-config-custom": "workspace:*",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.0",
    "prettier": "latest",
    "tsup": "^6.5.0",
    "tsx": "^3.12.2",
    "turbo": "latest"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --ext js,jsx,ts,tsx --quiet --fix --",
      "prettier --write"
    ],
    "*.{md,mdx,mjs,yml,yaml,css}": [
      "prettier --write"
    ]
  },
  "commitlint": {
    "rules": {
      "references-empty": [
        2,
        "never"
      ]
    },
    "parserPreset": {
      "parserOpts": {
        "referenceActions": null,
        "issuePrefixes": [
          "ATX-",
          "DVOPS-",
          "BLR-",
          "DEF-"
        ]
      }
    }
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "packageManager": "pnpm@7.25.0"
}
