{
  "name": "dxp",
  "version": "0.0.1",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "generators/*",
    "services/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "build:packages": "turbo run build --filter=@companydotcom/*",
    "clean": "turbo run clean && rm -rf node_modules",
    "dev": "turbo run dev --no-cache --continue",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md,mdx}\"",
    "dev:docs": "turbo run dev --filter=docs --no-cache",
    "prepare": "husky install",
    "switch:dev": "tsx scripts/switch-env.ts dev",
    "publish-packages": "turbo run build lint test && changeset publish",
    "preinstall": "npx only-allow pnpm",
    "test": "turbo run test",
    "test:coverage": "turbo run test -- --coverage",
    "test:watch": "turbo run test:watch",
    "postinstall": "pnpm run build:packages",
    "dev:components": "turbo run dev --filter=@companydotcom/ui --filter=@companydotcom/forms --filter=@companydotcom/utils --no-cache --continue"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.0",
    "@commitlint/cli": "^17.4.2",
    "@types/node": "18.11.10",
    "@vitest/coverage-c8": "^0.31.0",
    "@vitest/ui": "^0.28.4",
    "eslint": "^7.32.0",
    "eslint-config-custom": "workspace:*",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.0",
    "prettier": "latest",
    "tsup": "^6.5.0",
    "tsx": "^3.12.2",
    "turbo": "latest",
    "vitest": "0.31.0"
  },
  "commitlint": {
    "rules": {
      "references-empty": [
        2,
        "never"
      ]
    },
    "parserPreset": {
      "parserOpts": {
        "referenceActions": null,
        "issuePrefixes": [
          "ATX-",
          "DVOPS-",
          "BLR-",
          "DEF-"
        ]
      }
    }
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "packageManager": "pnpm@8.4.0"
}