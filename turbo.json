{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": [
    "NODE_ENV",
    "KMS_KEY_ID",
    "SES_FROM_ADDRESS",
    "USER_POOL_ID",
    "BASE_URL",
    "AWS_REGION",
    "TABLE_NAME"
  ],
  "pipeline": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/**",
        ".next/**",
        "storybook-static/**"
      ]
    },
    "workshop#build-storybook": {
      "outputs": [
        "storybook-static/**"
      ],
      "dependsOn": [
        "@vastly/ui#build",
        "@vastly/forms#build"
      ]
    },
    "website#build": {
      "outputs": [
        ".next/**"
      ],
      "dependsOn": [
        "@vastly/ui#build"
      ]
    },
    "ui#storybook": {
      "outputs": [
        "packages/ui/dist/storybook-static/**"
      ],
      "dependsOn": [
        "@vastly/forms#build",
        "@vastly/forms#build-storybook"
      ]
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    },
    "workshop#storybook": {
      "dependsOn": [
        "@vastly/ui#dev",
        "@vastly/forms#dev"
      ]
    },
    "test": {},
    "test:watch": {
      "cache": false
    },
    "@vastly/micro-service-core#test": {
      "env": [
        "region",
        "service",
        "accountId"
      ]
    }
  }
}