{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["NODE_ENV"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "storybook-static/**"]
    },
    "workshop#build-storybook": {
      "outputs": ["storybook-static/**"],
      "dependsOn": ["@companydotcom/ui#build", "@companydotcom/forms#build"]
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    },
    "workshop#storybook": {
      "dependsOn": ["@companydotcom/ui#dev", "@companydotcom/forms#dev"]
    },
    "test": {
      "outputs": ["coverage/**"]
    },
    "@companydotcom/micro-service-core#test": {
      "env": ["region", "service", "accountId"]
    }
  }
}
